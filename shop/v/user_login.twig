{% extends "main.twig" %}
{% block header %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-2">
                <h1>WebShop</h1>
                {% if userid == NULL %}
                    <h4 class="my-4">Демо режим</h4>
                    <h6 class="my-4">Для оформления заказа</h6>
                    <h6 class="my-4">Войдите под своим аккаунтом</h6>
                {% else %}
                    <h4 class="my-4">Обычный режим</h4>
                    <h6 class="my-4">Обычный аккаунт</h6>
                {% endif %}
            </div>
            <div class="col-lg-10 d-flex justify-content-center text-center" >
            <div style="display: inline-block;" class="form-group col-md-6" >
                <h1 class="text-lg-center">{{ title }}</h1>

                        <form method="post">
                                <input class="form-control py-4 mt-5"  type="text" placeholder="Введите имя пользователя" name="login" maxlength="30" autofocus="" required="">
                                <input class="form-control py-4 mt-5"  type="password" placeholder="Введите пароль" name="password" maxlength="30" required="">
                                <input type="submit" style="width: 262px; align-self: center;" class="btn btn-warning mt-5 mb-3" name="button" value="Войти">
                        </form>

                        <a href="index.php?class=user&method=regUser">Нет аккаунта ? Зарегистрируйтесь.</a>

            </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
    {{ parent() }}
{% endblock %}






